                    IsReadOnly="True"
                    Name="Text1_1" 
                    TextAlignment="Center" 
                    Margin ="5" 
                    HorizontalAlignment="Stretch" 
                    DataContext="Team1" 
                    VerticalAlignment="Stretch" 
                    FontSize="32" 
                    Foreground="#FF566E7A" 
                    Background="#FF353434" 
                    BorderBrush="{x:Null}">
                    Navn1
