                    Grid.Row="1" 
                    Grid.Column="2"
                    Width="55" 
                    Height="55" 
                    Fill="Green" 
                    Canvas.Left="10" 
                    Grid.ColumnSpan="2"/>
                <Ellipse
                    x:Name="Ellipse1"
                    Grid.Row="1" 
                    Grid.Column="1" 
                    Width="55" 
                    Height="55" 
                    Fill="Green"
                    Canvas.Left="10" 
                    Grid.ColumnSpan="2"
                    >
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Duration="0:0:2"
                                                Storyboard.TargetProperty="Width" From="120" To="0"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Duration="0:0:2"
                                                Storyboard.TargetProperty="Height" From="120" To="0"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                <Ellipse 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    Width="55" Height="55" 
                    Fill="Green" 
                    Canvas.Left="10"
                    Grid.ColumnSpan="2"/>
