        </Grid.RowDefinitions>
        <Rectangle 
            Grid.Row="0" 
            Grid.Column="0" 
            Fill="Black" 
            Height="10" 
            Opacity="10"
            Margin="0,181,6.4,168.4"/>
        <Rectangle 
            Grid.Row="0" 
            Grid.Column="0" 
            Fill="Black" 
            Height="5" 
            Margin="0,100,6.4,249.4"/>
