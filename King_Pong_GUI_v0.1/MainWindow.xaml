                IsReadOnly="True"
                Margin="5" 
                Width="Auto" 
                Height="Auto" 
                FontSize="64" 
                FontWeight="Bold" 
                TextAlignment="Center" 
                Background="#FF353434" 
                Foreground="#FF566E7A" 
                BorderBrush="{x:Null}">
                Score
            </TextBox>
            <TextBox
                IsReadOnly="True"
                Margin="5" 
                HorizontalAlignment="Stretch" 
                Width="Auto" 
                Height="Auto" 
                FontSize="54" 
                FontWeight="Bold" 
                TextAlignment="Center" 
                Background="#FF353434" 
                Foreground="#FF566E7A" 
                BorderBrush="{x:Null}">
                TS  6 : 5  HF
            </TextBox>
            <TextBox 
                IsReadOnly="True"
                Width="Auto" 
                Height="Auto" 
                FontSize="55" 
                FontWeight="Bold" 
                TextAlignment="Center" 
                BorderBrush="{x:Null}" 
                VerticalAlignment="Bottom" 
                Background="#FF353434" 
                Foreground="#FF566E7A">
                Magnex's Tur
            </TextBox>
        </StackPanel>
