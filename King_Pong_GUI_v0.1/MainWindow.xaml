                    Grid.Column="1" 
                    Width="55" 
                    Height="55" 
                    Fill="Green" 
                    Canvas.Left="10" 
                    Grid.ColumnSpan="2"/>
                <Ellipse 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    Width="55" Height="55" 
                    Fill="Green" 
                    Canvas.Left="10"
                    Grid.ColumnSpan="2"/>
                <Ellipse 
                    Grid.Row="2" 
                    Grid.Column="2" 
                    Width="55" Height="55" 
                    Fill="Green" 
                    Canvas.Left="10" 
                    Grid.ColumnSpan="1"/>
